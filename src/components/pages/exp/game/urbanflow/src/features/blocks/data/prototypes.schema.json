{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BlockPrototypes",
  "type": "object",
  "properties": {
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" }
        },
        "required": ["id", "label"],
        "additionalProperties": false
      }
    },
    "blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "category": { "type": "string" },
          "footprint": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 2,
            "maxItems": 2
          },
          "orientation": { "type": "number", "enum": [0, 90, 180, 270] },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          }
        },
        "required": ["id", "label", "category", "footprint"],
        "additionalProperties": true
      }
    }
  },
  "required": ["categories", "blocks"],
  "additionalProperties": false
}


